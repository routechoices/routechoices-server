#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
BASEDIR=$(dirname $DIR)
PID_FILE=${BASEDIR}/var/tornado.pid
if [ -f $PID_FILE ];
then
 pid=`cat $PID_FILE`
 echo "checks PID $pid"
 if ps -p $pid > /dev/null 2>&1
 then
  echo "already running"
 else
  echo "starting"
  nohup ${BASEDIR}/env/bin/python ${BASEDIR}/manage.py run_tcp_server --tmt250-port=12000 --mictrack-port=12001 --queclink-port=12002 --tracktape-port=12003 --xexun-port=12004 --gt06-port=12005 > ${BASEDIR}/logs/tornado.log 2> ${BASEDIR}/logs/tornado.error.log &
  echo $! > $PID_FILE
 fi
else
 echo "starting"
 nohup ${BASEDIR}/env/bin/python ${BASEDIR}/manage.py run_tcp_server --tmt250-port=12000 --mictrack-port=12001 --queclink-port=12002 --tracktape-port=12003 --xexun-port=12004 --gt06-port=12005 > ${BASEDIR}/logs/tornado.log 2> ${BASEDIR}/logs/tornado.error.log &
 echo $! > $PID_FILE
fi
